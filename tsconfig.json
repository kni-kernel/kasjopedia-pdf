{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["*"],
      "@interfaces/*": ["interfaces/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    },
    "lib": ["es2019", "dom"],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
